<Window x:Class="NxTiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="app.ico"
        Title="NxTiler" Height="460" Width="800"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Background="{StaticResource ProxmoxDarkGray}"
        Topmost="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Bar / Controls -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="{StaticResource ProxmoxGray}" BorderBrush="#3a424a" BorderThickness="0,0,0,1" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Settings -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Settings" Click="BtnSettings_Click" Style="{StaticResource ProxmoxButton}" Margin="0,0,4,0"/>
                    <Button Content="Hotkeys" Click="BtnHotkeys_Click" Style="{StaticResource ProxmoxButton}" Margin="0,0,8,0"/>
                </StackPanel>

                <!-- Center: Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Open Selected" Click="OpenSelected_Click" Style="{StaticResource ProxmoxButton}" Margin="4,0"/>
                    <Button Content="Arrange" Click="ArrangeNow_Click" Style="{StaticResource ProxmoxAccentButton}" Margin="4,0"/>
                </StackPanel>

                <!-- Right: Auto & Overlay Hint -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="AutoArrangeCheck" Content="Auto"
                        Checked="AutoArrangeCheck_Changed" Unchecked="AutoArrangeCheck_Changed" Margin="0,0,12,0"
                        Style="{StaticResource {x:Type CheckBox}}"/>
                    
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="HelpTextOverlay" Text="F1 — Overlay" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                        <TextBlock x:Name="HelpTextMain" Text="Ctrl+F1 — Main Window" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                        <TextBlock x:Name="HelpTextFocus" Text="Shift+F1 — Focus" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                        <TextBlock x:Name="HelpTextMin" Text="~ — Minimize" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                        <TextBlock x:Name="HelpTextNav" Text="←/→ — Navigate" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                        <TextBlock x:Name="HelpTextRec" Text="F2 Rec | F3 Pause | F4 Stop" Opacity="0.6" FontStyle="Italic" FontSize="10"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список обнаруженных окон -->
        <ListView Grid.Row="1" x:Name="WindowsList" BorderThickness="0" Margin="0" Background="Transparent" Foreground="#e6edf3">
            <ListView.Resources>
                <!-- Hide Headers -->
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="0,0,0,1" 
                                        Background="{TemplateBinding Background}" 
                                        Padding="{TemplateBinding Padding}" 
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Background" TargetName="Bd" Value="#2a2f35"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="true">
                                        <Setter Property="Background" TargetName="Bd" Value="#444c56"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#3a424a"/>
                    <Setter Property="Padding" Value="4,2"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding HwndHex}"/>
                    <GridViewColumn Width="300" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding State}"/>
                    <GridViewColumn Width="150" DisplayMemberBinding="{Binding Source}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статус -->
        <StatusBar Grid.Row="2" Background="{StaticResource ProxmoxGray}" Foreground="#e6edf3" BorderBrush="#3a424a" BorderThickness="0,1,0,0" Padding="6,3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready."/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding ElementName=AutoArrangeCheck, Path=IsChecked, StringFormat=Auto: {0}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>