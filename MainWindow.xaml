<Window x:Class="NxTiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="app.ico"
        Title="NoMachine Tiler" Height="500" Width="900"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Background="{StaticResource ProxmoxDarkGray}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Bar / Controls -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="{StaticResource ProxmoxGray}" BorderBrush="#555555" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Settings -->
                <Button Grid.Column="0" Content="⚙ Настройки" Click="BtnSettings_Click" Style="{StaticResource ProxmoxButton}"/>

                <!-- Center: Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Открыть выбранные" Click="OpenSelected_Click" Style="{StaticResource ProxmoxButton}" Margin="4,0"/>
                    <Button Content="Разложить сейчас" Click="ArrangeNow_Click" Style="{StaticResource ProxmoxAccentButton}" Margin="4,0"/>
                </StackPanel>

                <!-- Right: Auto & Overlay Hint -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="AutoArrangeCheck" Content="Автораскладка"
                        Checked="AutoArrangeCheck_Changed" Unchecked="AutoArrangeCheck_Changed" Margin="0,0,16,0"
                        Style="{StaticResource {x:Type CheckBox}}" FontSize="14"/>
                    <TextBlock Text="F1 — Оверлей" Opacity="0.6" FontStyle="Italic" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список обнаруженных окон -->
        <ListView Grid.Row="1" x:Name="WindowsList" BorderThickness="0" Margin="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="HWND" Width="100" DisplayMemberBinding="{Binding HwndHex}"/>
                    <GridViewColumn Header="Заголовок окна" Width="400" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Состояние" Width="120" DisplayMemberBinding="{Binding State}"/>
                    <GridViewColumn Header="Источник" Width="150" DisplayMemberBinding="{Binding SourceName}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статус -->
        <StatusBar Grid.Row="2" Background="{StaticResource ProxmoxGray}" Foreground="#E0E0E0" BorderBrush="#555555" BorderThickness="0,1,0,0" Padding="8,4">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово."/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding ElementName=AutoArrangeCheck, Path=IsChecked, StringFormat=Авто: {0}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>