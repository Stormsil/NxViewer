<UserControl x:Class="NxTiler.App.Controls.HotkeyBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="200"
             x:Name="Root">
    <ui:TextBox x:Name="InputBox"
                IsReadOnly="True"
                Cursor="Hand"
                PreviewKeyDown="InputBox_PreviewKeyDown"
                GotFocus="InputBox_GotFocus"
                LostFocus="InputBox_LostFocus"
                PlaceholderText="Click to set hotkey"
                Text="{Binding DisplayText, ElementName=Root, Mode=OneWay}" />
</UserControl>