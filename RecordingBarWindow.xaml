<Window x:Class="NxTiler.RecordingBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="4" Background="#E61e1f22" BorderBrush="#4a545e" BorderThickness="1" Padding="6,3">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Recording dot -->
            <Ellipse x:Name="RecDot" Width="10" Height="10"
                     Margin="0,0,8,0" VerticalAlignment="Center"/>

            <!-- Timer -->
            <TextBlock x:Name="TimerText" Text="00:00:00" Foreground="White"
                       FontSize="14" FontFamily="Consolas" FontWeight="SemiBold"
                       VerticalAlignment="Center" Margin="0,0,12,0" MinWidth="65"/>

            <!-- Separator -->
            <Border Width="1" Background="#3a424a" Margin="0,2,12,2"/>

            <!-- Pause button -->
            <Button x:Name="BtnPause" Click="BtnPause_Click" ToolTip="Pause / Resume"
                    Width="28" Height="28" Margin="0,0,4,0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" CornerRadius="3" Background="#31363d">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#3a414a"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
                <TextBlock x:Name="PauseIcon" Text="⏸" FontSize="13"/>
            </Button>

            <!-- Stop button -->
            <Button x:Name="BtnStop" Click="BtnStop_Click" ToolTip="Stop Recording"
                    Width="28" Height="28" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd" CornerRadius="3" Background="#e74c3c">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#ff6b5e"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
                <TextBlock Text="⏹" FontSize="13"/>
            </Button>
        </StackPanel>
    </Border>
</Window>
