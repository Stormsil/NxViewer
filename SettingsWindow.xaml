<Window x:Class="NxTiler.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Width="600" Height="700"
        Background="{StaticResource ProxmoxDarkGray}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Loaded="Window_Loaded" Closing="Window_Closing">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#666666"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
            <StackPanel>
                <!-- Filters Section -->
            <GroupBox Header="Фильтры">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Заголовок окна (Regex):"/>
                        <TextBox Grid.Column="1" x:Name="TitleFilterBox"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Имя сессии (Regex):"/>
                        <TextBox Grid.Column="1" x:Name="FilterBox" ToolTip="Например: ^(WoW|Poe)\d+$" TextChanged="FilterBox_TextChanged"/>
                    </Grid>

                    <CheckBox x:Name="SortDescCheck" Content="Сортировать по убыванию (9 → 1)" Margin="200,4,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Paths Section -->
            <GroupBox Header="Пути">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Папка с .nxs:"/>
                    <TextBox Grid.Column="1" x:Name="FolderBox" VerticalContentAlignment="Center" TextChanged="FolderBox_TextChanged"/>
                    <Button Grid.Column="2" Content="..." Click="ChooseFolder_Click" Width="40" Margin="8,0,0,0" Style="{StaticResource ProxmoxButton}"/>
                </Grid>
            </GroupBox>

            <!-- File Selection Section -->
            <GroupBox Header="Выбор конфигов для запуска">
                <StackPanel>
                    <TextBlock Text="Отметьте файлы, которые нужно открывать:" Margin="0,0,0,8" Opacity="0.7"/>
                    <ListBox x:Name="FileListBox" Height="140" SelectionMode="Multiple">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" Padding="4,2">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#444444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsEnabled}" Foreground="#E0E0E0" FontSize="14"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </GroupBox>

            <!-- Layout & Behavior Section -->
            <GroupBox Header="Расположение и поведение">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="40"/> <!-- spacer -->
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Зазор (px):" Margin="0,0,12,0"/>
                        <TextBox Grid.Column="1" x:Name="GapBox"/>

                        <TextBlock Grid.Column="3" Text="Верхний отступ (px):" Margin="0,0,12,0"/>
                        <TextBox Grid.Column="4" x:Name="TopPadBox"/>
                    </Grid>

                    <CheckBox x:Name="SuspendOnMaxCheck" Content="Пауза автораскладки, если есть развернутое окно (Maximized)" Margin="0,4,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        </ScrollViewer>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Закрыть" Click="BtnClose_Click" Width="100" Style="{StaticResource ProxmoxButton}"/>
        </StackPanel>
    </Grid>
</Window>